<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.grahamnessler.athletesdatabase.GameActivity"
    tools:showIn="@layout/activity_game">

    <TextView
        android:id="@+id/p1FirstDynamic"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:text="@string/p1FirstDynamic"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="244dp" />

    <TextView
        android:id="@+id/p1LastDynamic"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginTop="244dp"
        android:text="@string/p1LastDynamic"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1StaticLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1: "
        tools:layout_editor_absoluteX="43dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="247dp" />
</android.support.constraint.ConstraintLayout>
