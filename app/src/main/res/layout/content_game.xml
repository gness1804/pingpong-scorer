<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.grahamnessler.athletesdatabase.GameActivity"
    tools:showIn="@layout/activity_game">

    <Button
        android:id="@+id/p2Inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="121dp"
        android:onClick="incrementP2Score"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="54dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/p2FirstDynamic"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginTop="319dp"
        android:text="@string/p2FirstDyamic"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1FirstDynamic"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginTop="244dp"
        android:text="@string/p1FirstDynamic"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2LastDynamic"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginTop="319dp"
        android:text="@string/p2LastDynamic"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p1LastDynamic"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginTop="244dp"
        android:text="@string/p1LastDynamic"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2StaticLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="325dp"
        android:text="Player 2: "
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <TextView
        android:id="@+id/p1StaticLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="247dp"
        android:text="Player 1: "
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="43dp" />

    <TextView
        android:id="@+id/p2Score"
        android:layout_width="55dp"
        android:layout_height="31dp"
        android:layout_marginBottom="87dp"
        android:layout_marginLeft="255dp"
        android:text="@string/p2Score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/p1Score"
        android:layout_width="55dp"
        android:layout_height="31dp"
        android:layout_marginBottom="87dp"
        android:layout_marginLeft="43dp"
        android:text="@string/p1Score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/p1Dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="decrementP1Score"
        android:text="-"
        tools:layout_editor_absoluteX="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/p2Dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="54dp"
        android:onClick="decrementP2Score"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/p1Inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="118dp"
        android:onClick="incrementP1Score"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/winnerDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:text="@string/winnerDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="142dp" />

</android.support.constraint.ConstraintLayout>
